{
    "manifest_version": 3,
    "background": {
        "service_worker": "src/background/main.js"
    },
    "action": {
        "default_popup": "src/popup/index.html"
    },
    "icons": {
        "16": "assets/images/icon16.png",
        "48": "assets/images/icon48.png",
        "128": "assets/images/icon128.png"
    },
    "web_accessible_resources": {
        "resources": ["assets/*"],
        "matches": ["<all_urls>"]
    }
}